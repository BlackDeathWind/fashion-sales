@model Product
@{
    Layout = "/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Xóa sản phẩm";
}

<h1 class="h4 mb-3">Xóa sản phẩm</h1>

<div class="alert alert-warning">
    Bạn có chắc chắn muốn xóa sản phẩm <strong>@Model.Name</strong>?
</div>

<dl class="row">
    <dt class="col-sm-2">ID</dt>
    <dd class="col-sm-10">@Model.Id</dd>

    <dt class="col-sm-2">Danh mục</dt>
    <dd class="col-sm-10">@Model.Category?.Name</dd>

    <dt class="col-sm-2">Giá</dt>
    <dd class="col-sm-10">@String.Format("{0:N0}₫", Model.DiscountPrice ?? Model.Price)</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="Index" class="btn btn-outline-secondary ms-2">Hủy</a>
</form>


