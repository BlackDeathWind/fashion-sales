@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<div class="container admin-wrapper">
    <div class="row mt-4 admin-layout">
        <div class="col-md-3 mb-3">
            <div class="admin-sidebar glass-panel p-3">
                <div class="list-group admin-nav">
                @if (User.IsInRole("Admin"))
                {
                    <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="list-group-item admin-nav-item">Dashboard</a>
                    <a asp-area="Admin" asp-controller="Orders" asp-action="Index" class="list-group-item admin-nav-item">Đơn hàng</a>
                    <a asp-area="Admin" asp-controller="Products" asp-action="Index" class="list-group-item admin-nav-item">Sản phẩm</a>
                    <a asp-area="Admin" asp-controller="Categories" asp-action="Index" class="list-group-item admin-nav-item">Danh mục</a>
                    <a asp-area="Admin" asp-controller="Statistics" asp-action="Index" class="list-group-item admin-nav-item">Thống kê</a>
                    <a asp-area="Admin" asp-controller="Users" asp-action="Index" class="list-group-item admin-nav-item">Tài khoản</a>
                }
                else if (User.IsInRole("Staff"))
                {
                    <a asp-area="Admin" asp-controller="Orders" asp-action="Index" class="list-group-item admin-nav-item">Đơn hàng</a>
                    <a asp-area="Admin" asp-controller="Products" asp-action="Index" class="list-group-item admin-nav-item">Sản phẩm</a>
                }
                </div>
            </div>
        </div>
        <div class="col-md-9 admin-content">
            @RenderBody()
        </div>
    </div>
    </div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}

