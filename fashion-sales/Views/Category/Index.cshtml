@model ProductListViewModel
@{
    ViewData["Title"] = Model.CategoryName;
}

<nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb small">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
        <li class="breadcrumb-item active" aria-current="page">@Model.CategoryName</li>
    </ol>
</nav>

<div class="d-flex justify-content-between align-items-end mb-4">
    <div>
        <h2 class="fw-bold mb-1">@Model.CategoryName</h2>
        <p class="text-muted mb-0">Hiển thị @Model.Products.Count() sản phẩm</p>
    </div>
    
    <!-- Filters -->
    <form method="get" asp-action="Index" asp-controller="Category" id="filterForm" class="d-flex gap-2">
        @if (!string.IsNullOrEmpty(Model.CategorySlug))
        {
            <input type="hidden" name="slug" value="@Model.CategorySlug" />
        }
        <select class="form-select form-select-sm bg-dark text-white border-secondary" name="sort" onchange="this.form.submit()">
            <option value="newest" selected="@(string.IsNullOrEmpty(Model.SortOption) || Model.SortOption == "newest" ? "selected" : null)">Mới nhất</option>
            <option value="price-asc" selected="@(Model.SortOption == "price-asc" ? "selected" : null)">Giá: Thấp đến Cao</option>
            <option value="price-desc" selected="@(Model.SortOption == "price-desc" ? "selected" : null)">Giá: Cao đến Thấp</option>
        </select>
    </form>
</div>

<div class="row g-4">
    @if (!Model.Products.Any())
    {
        <div class="col-12">
            <div class="glass-panel p-5 text-center">
                <p class="text-muted">Chưa có sản phẩm trong danh mục này.</p>
            </div>
        </div>
    }
    else
    {
        foreach (var p in Model.Products)
        {
            <div class="col-6 col-md-3">
                <div class="glass-panel overflow-hidden h-100 d-flex flex-column">
                    <div class="position-relative">
                        <a asp-controller="Product" asp-action="Details" asp-route-id="@p.Id" class="text-decoration-none">
                            @if (!string.IsNullOrEmpty(p.MainImageUrl))
                            {
                                <img src="@p.MainImageUrl" class="w-100 object-fit-cover" style="height: 250px;" alt="@p.Name">
                            }
                            else
                            {
                                <div class="w-100 bg-light d-flex align-items-center justify-content-center" style="height: 250px;">
                                    <span class="text-muted small">Ảnh sản phẩm</span>
                                </div>
                            }
                        </a>
                        @if (p.DiscountPrice.HasValue)
                        {
                            <span class="badge bg-danger position-absolute top-0 start-0 m-2">-@((int)((1 - (p.DiscountPrice.Value / p.Price)) * 100))%</span>
                        }
                        <form asp-controller="Cart" asp-action="Add" method="post" class="position-absolute bottom-0 end-0 m-3">
                            <input type="hidden" name="productId" value="@p.Id" />
                            <input type="hidden" name="quantity" value="1" />
                            <button type="submit" class="btn btn-light rounded-circle shadow-sm border-0" style="width:40px;height:40px;" title="Thêm vào giỏ">
                                <i class="ph-bold ph-plus"></i>
                            </button>
                        </form>
                    </div>
                    <div class="p-3 d-flex flex-column flex-grow-1">
                        <a asp-controller="Product" asp-action="Details" asp-route-id="@p.Id" class="text-decoration-none">
                            <h5 class="fs-6 fw-bold mb-1 text-white text-truncate">@p.Name</h5>
                        </a>
                        <div class="mt-auto pt-2 d-flex justify-content-between align-items-center">
                            <span class="text-primary fw-bold">@String.Format("{0:N0}₫", p.DiscountPrice ?? p.Price)</span>
                            @if (p.DiscountPrice.HasValue)
                            {
                                <small class="text-muted text-decoration-line-through">@String.Format("{0:N0}₫", p.Price)</small>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>


