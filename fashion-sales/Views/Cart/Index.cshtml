@model IList<CartItemViewModel>
@{
    ViewData["Title"] = "Giỏ hàng";
    var total = Model.Sum(i => i.TotalPrice);
}

<h1 class="h4 mb-3">Giỏ hàng của bạn</h1>

<div class="row">
    <div class="col-lg-8">
        @if (!Model.Any())
        {
            <div class="alert alert-info">
                Giỏ hàng đang trống. <a asp-controller="Category" asp-action="Index">Tiếp tục mua sắm</a>.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table align-middle">
                    <thead>
                        <tr>
                            <th>Sản phẩm</th>
                            <th class="text-end">Đơn giá</th>
                            <th class="text-center">Số lượng</th>
                            <th class="text-end">Thành tiền</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="me-3">
                                            <div class="ratio ratio-4x3 bg-light rounded" style="width: 80px;">
                                                @if (!string.IsNullOrEmpty(item.ImageUrl))
                                                {
                                                    <img src="@item.ImageUrl" class="img-fluid rounded" alt="@item.ProductName" />
                                                }
                                                else
                                                {
                                                    <span class="text-muted d-flex align-items-center justify-content-center small">Ảnh</span>
                                                }
                                            </div>
                                        </div>
                                        <div>
                                            <div class="fw-semibold">@item.ProductName</div>
                                        </div>
                                    </div>
                                </td>
                                <td class="text-end">@String.Format("{0:N0}₫", item.UnitPrice)</td>
                                <td class="text-center" style="max-width: 120px;">
                                    <form asp-controller="Cart" asp-action="Update" method="post" style="display: none;" id="updateForm_@item.ProductId">
                                        <input type="hidden" name="productId" value="@item.ProductId" />
                                        <input type="hidden" name="quantity" id="quantity_@item.ProductId" value="@item.Quantity" />
                                    </form>
                                    <input type="number" 
                                           value="@item.Quantity" 
                                           min="1" 
                                           class="form-control form-control-sm text-center cart-quantity" 
                                           data-product-id="@item.ProductId"
                                           style="max-width: 80px; margin: 0 auto;" />
                                </td>
                                <td class="text-end">@String.Format("{0:N0}₫", item.TotalPrice)</td>
                                <td class="text-end">
                                    <form asp-controller="Cart" asp-action="Remove" method="post">
                                        <input type="hidden" name="productId" value="@item.ProductId" />
                                        <button type="submit" class="btn btn-sm btn-link text-danger">Xóa</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header fw-semibold">Tóm tắt đơn hàng</div>
            <div class="card-body">
                <div class="d-flex justify-content-between mb-2">
                    <span>Tạm tính</span>
                    <span>@String.Format("{0:N0}₫", total)</span>
                </div>
                <div class="d-flex justify-content-between mb-3">
                    <span>Phí vận chuyển</span>
                    <span>Miễn phí</span>
                </div>
                <hr />
                <div class="d-flex justify-content-between mb-3 fw-bold">
                    <span>Tổng cộng</span>
                    <span>@String.Format("{0:N0}₫", total)</span>
                </div>
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-dark w-100 mb-2">Tiếp tục mua sắm</a>
                @if (Model.Any())
                {
                    <a asp-controller="Order" asp-action="Checkout" class="btn btn-dark w-100">Tiến hành đặt hàng</a>
                }
                else
                {
                    <a class="btn btn-dark w-100 disabled" aria-disabled="true">Tiến hành đặt hàng</a>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-update cart quantity khi thay đổi
        document.addEventListener('DOMContentLoaded', function() {
            const quantityInputs = document.querySelectorAll('.cart-quantity');
            let updateTimeout;

            quantityInputs.forEach(input => {
                const originalValue = input.value;

                input.addEventListener('change', function() {
                    const productId = this.getAttribute('data-product-id');
                    let quantity = parseInt(this.value) || 1;

                    // Đảm bảo số lượng >= 1
                    if (quantity < 1) {
                        quantity = 1;
                        this.value = 1;
                    }

                    // Tạo và submit form ẩn
                    const form = document.createElement('form');
                    form.method = 'POST';
                    form.action = '@Url.Action("Update", "Cart")';
                    form.style.display = 'none';

                    // Thêm anti-forgery token
                    const tokenInput = document.createElement('input');
                    tokenInput.type = 'hidden';
                    tokenInput.name = '__RequestVerificationToken';
                    tokenInput.value = ''.match(/value="([^"]+)"/)?.[1] || '';
                    form.appendChild(tokenInput);

                    // Thêm productId
                    const productIdInput = document.createElement('input');
                    productIdInput.type = 'hidden';
                    productIdInput.name = 'productId';
                    productIdInput.value = productId;
                    form.appendChild(productIdInput);

                    // Thêm quantity
                    const quantityInput = document.createElement('input');
                    quantityInput.type = 'hidden';
                    quantityInput.name = 'quantity';
                    quantityInput.value = quantity;
                    form.appendChild(quantityInput);

                    document.body.appendChild(form);
                    form.submit();
                });

                // Validate khi nhập
                input.addEventListener('input', function() {
                    const value = parseInt(this.value);
                    if (isNaN(value) || value < 1) {
                        this.value = originalValue;
                    }
                });
            });
        });
    </script>
}

