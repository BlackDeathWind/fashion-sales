@model IList<CartItemViewModel>
@{
    ViewData["Title"] = "Giỏ hàng";
    var total = Model.Sum(i => i.TotalPrice);
}

<h1 class="h4 mb-4 fw-bold">Giỏ hàng của bạn</h1>

<div class="row">
    <div class="col-lg-8 mb-4">
        @if (!Model.Any())
        {
            <div class="glass-panel p-4 text-center">
                <i class="ph ph-shopping-cart fs-1 text-muted mb-3"></i>
                <p class="text-muted mb-3">Giỏ hàng đang trống.</p>
                <a asp-controller="Category" asp-action="Index" class="btn btn-primary-modern">Tiếp tục mua sắm</a>
            </div>
        }
        else
        {
            <div class="glass-panel p-0 overflow-hidden">
                <div class="table-responsive">
                    <table class="table table-modern mb-0">
                        <thead>
                            <tr>
                                <th>Sản phẩm</th>
                                <th>Đơn giá</th>
                                <th class="text-center">Số lượng</th>
                                <th class="text-end">Thành tiền</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center gap-3">
                                            @if (!string.IsNullOrEmpty(item.ImageUrl))
                                            {
                                                <img src="@item.ImageUrl" class="rounded-3" style="width: 60px; height: 60px; object-fit: cover;" alt="@item.ProductName">
                                            }
                                            else
                                            {
                                                <div class="bg-light rounded-3 d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                                                    <span class="text-muted small">Ảnh</span>
                                                </div>
                                            }
                                            <div>
                                                <div class="fw-bold text-white">@item.ProductName</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td>@String.Format("{0:N0}₫", item.UnitPrice)</td>
                                    <td>
                                        <div class="d-flex justify-content-center">
                                            <form asp-controller="Cart" asp-action="Update" method="post" style="display: none;" id="updateForm_@item.ProductId">
                                                <input type="hidden" name="productId" value="@item.ProductId" />
                                                <input type="hidden" name="quantity" id="quantity_@item.ProductId" value="@item.Quantity" />
                                            </form>
                                            <input type="number" 
                                                   value="@item.Quantity" 
                                                   min="1" 
                                                   class="form-control form-control-modern text-center p-1 cart-quantity" 
                                                   data-product-id="@item.ProductId"
                                                   style="width: 60px;">
                                        </div>
                                    </td>
                                    <td class="text-end fw-bold text-primary">@String.Format("{0:N0}₫", item.TotalPrice)</td>
                                    <td class="text-end">
                                        <form asp-controller="Cart" asp-action="Remove" method="post">
                                            <input type="hidden" name="productId" value="@item.ProductId" />
                                            <button type="submit" class="btn btn-sm text-danger border-0 bg-transparent">
                                                <i class="ph-bold ph-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
    </div>
    
    <div class="col-lg-4">
        <div class="glass-panel p-4">
            <h5 class="fw-bold mb-4">Tổng giỏ hàng</h5>
            <div class="d-flex justify-content-between mb-2 text-muted">
                <span>Tạm tính</span>
                <span>@String.Format("{0:N0}₫", total)</span>
            </div>
            <div class="d-flex justify-content-between mb-4 text-muted">
                <span>Phí vận chuyển</span>
                <span>Miễn phí</span>
            </div>
            <div class="border-top border-secondary border-opacity-25 pt-3 mb-4 d-flex justify-content-between align-items-center">
                <span class="fw-bold text-white">Tổng cộng</span>
                <span class="h4 mb-0 text-primary fw-bold">@String.Format("{0:N0}₫", total)</span>
            </div>
            @if (Model.Any())
            {
                <a asp-controller="Order" asp-action="Checkout" class="btn btn-primary-modern w-100 text-center">Thanh toán ngay</a>
            }
            else
            {
                <button class="btn btn-primary-modern w-100 text-center" disabled>Thanh toán ngay</button>
            }
            <div class="text-center mt-3">
                <a asp-controller="Category" asp-action="Index" class="text-muted small text-decoration-none hover-underline">Tiếp tục mua sắm</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-update cart quantity khi thay đổi
        document.addEventListener('DOMContentLoaded', function() {
            const quantityInputs = document.querySelectorAll('.cart-quantity');
            let updateTimeout;

            quantityInputs.forEach(input => {
                const originalValue = input.value;

                input.addEventListener('change', function() {
                    const productId = this.getAttribute('data-product-id');
                    let quantity = parseInt(this.value) || 1;

                    // Đảm bảo số lượng >= 1
                    if (quantity < 1) {
                        quantity = 1;
                        this.value = 1;
                    }

                    // Tạo và submit form ẩn
                    const form = document.createElement('form');
                    form.method = 'POST';
                    form.action = '@Url.Action("Update", "Cart")';
                    form.style.display = 'none';

                    // Thêm anti-forgery token
                    const tokenInput = document.createElement('input');
                    tokenInput.type = 'hidden';
                    tokenInput.name = '__RequestVerificationToken';
                    tokenInput.value = ''.match(/value="([^"]+)"/)?.[1] || '';
                    form.appendChild(tokenInput);

                    // Thêm productId
                    const productIdInput = document.createElement('input');
                    productIdInput.type = 'hidden';
                    productIdInput.name = 'productId';
                    productIdInput.value = productId;
                    form.appendChild(productIdInput);

                    // Thêm quantity
                    const quantityInput = document.createElement('input');
                    quantityInput.type = 'hidden';
                    quantityInput.name = 'quantity';
                    quantityInput.value = quantity;
                    form.appendChild(quantityInput);

                    document.body.appendChild(form);
                    form.submit();
                });

                // Validate khi nhập
                input.addEventListener('input', function() {
                    const value = parseInt(this.value);
                    if (isNaN(value) || value < 1) {
                        this.value = originalValue;
                    }
                });
            });
        });
    </script>
}

