@model ProfileViewModel
@{
    ViewData["Title"] = "Thông tin tài khoản";
}

<div class="container">
<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="glass-panel p-4">
            <h3 class="fw-bold mb-4">Thông tin tài khoản</h3>
                
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @TempData["SuccessMessage"]
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert"></button>
                    </div>
                }

                <form asp-action="Profile" method="post" id="profileForm">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3 small"></div>

                <div class="row g-3 mb-3">
                    <div class="col-md-6">
                        <label asp-for="FullName" class="form-label">Họ và tên</label>
                        <input asp-for="FullName" class="form-control form-control-modern" />
                        <span asp-validation-for="FullName" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input asp-for="Email" class="form-control form-control-modern" type="email" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                        <small class="text-muted small">Email là tùy chọn</small>
                    </div>
                    </div>

                    <div class="mb-3">
                    <label asp-for="PhoneNumber" class="form-label">Số điện thoại</label>
                    <input asp-for="PhoneNumber" class="form-control form-control-modern" type="tel" />
                    <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                    </div>

                <h5 class="fw-bold mt-4 mb-3 fs-6 text-primary">Địa chỉ mặc định</h5>

                <div class="row g-3 mb-3">
                    <div class="col-md-4">
                        <label asp-for="ProvinceCode" class="form-label">Tỉnh / Thành</label>
                        <input type="text"
                               class="form-control form-control-modern address-combobox"
                               id="ProfileProvinceInput"
                               list="ProfileProvinceOptions"
                               placeholder="Chọn Tỉnh/Thành"
                               autocomplete="off" />
                        <datalist id="ProfileProvinceOptions"></datalist>
                        <input type="hidden" asp-for="ProvinceCode" id="ProvinceCode" />
                        <input type="hidden" asp-for="ProvinceName" id="ProvinceName" />
                        <span asp-validation-for="ProvinceCode" class="text-danger small"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="DistrictCode" class="form-label">Quận / Huyện</label>
                        <input type="text"
                               class="form-control form-control-modern address-combobox"
                               id="ProfileDistrictInput"
                               list="ProfileDistrictOptions"
                               placeholder="Chọn Quận/Huyện"
                               autocomplete="off"
                               disabled />
                        <datalist id="ProfileDistrictOptions"></datalist>
                        <input type="hidden" asp-for="DistrictCode" id="DistrictCode" />
                        <input type="hidden" asp-for="DistrictName" id="DistrictName" />
                        <span asp-validation-for="DistrictCode" class="text-danger small"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="WardCode" class="form-label">Phường / Xã</label>
                        <input type="text"
                               class="form-control form-control-modern address-combobox"
                               id="ProfileWardInput"
                               list="ProfileWardOptions"
                               placeholder="Chọn Phường/Xã"
                               autocomplete="off"
                               disabled />
                        <datalist id="ProfileWardOptions"></datalist>
                        <input type="hidden" asp-for="WardCode" id="WardCode" />
                        <input type="hidden" asp-for="WardName" id="WardName" />
                        <span asp-validation-for="WardCode" class="text-danger small"></span>
                    </div>
                    </div>

                    <div class="mb-4">
                    <label asp-for="StreetAddress" class="form-label">Địa chỉ cụ thể</label>
                    <input asp-for="StreetAddress" class="form-control form-control-modern" placeholder="Số nhà, tên đường..." />
                    <span asp-validation-for="StreetAddress" class="text-danger small"></span>
                    </div>

                <div class="d-flex justify-content-end gap-3 mt-4">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-light rounded-pill px-4">Hủy</a>
                    <button type="submit" class="btn btn-primary-modern px-4">Cập nhật</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/provinces-api.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            initAddressPicker({
                provinceInputId: 'ProfileProvinceInput',
                provinceListId: 'ProfileProvinceOptions',
                provinceCodeId: 'ProvinceCode',
                provinceNameId: 'ProvinceName',
                districtInputId: 'ProfileDistrictInput',
                districtListId: 'ProfileDistrictOptions',
                districtCodeId: 'DistrictCode',
                districtNameId: 'DistrictName',
                wardInputId: 'ProfileWardInput',
                wardListId: 'ProfileWardOptions',
                wardCodeId: 'WardCode',
                wardNameId: 'WardName',
                initialProvinceCode: @(Model.ProvinceCode?.ToString() ?? "null"),
                initialDistrictCode: @(Model.DistrictCode?.ToString() ?? "null"),
                initialWardCode: @(Model.WardCode?.ToString() ?? "null")
            });
        });
    </script>
}
