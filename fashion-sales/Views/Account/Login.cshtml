@model LoginViewModel
@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="container">
    <div class="auth-container">
    <div class="col-md-5">
        <div class="glass-panel auth-card">
            <div class="text-center mb-4">
                <h3 class="fw-bold">Đăng nhập</h3>
                <p class="text-muted small">Đăng nhập để tiếp tục mua sắm</p>
            </div>
                
                <form asp-action="Login" method="post">
                    <input type="hidden" asp-for="ReturnUrl" />
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3 small"></div>

                    <div class="mb-3">
                    <label asp-for="Email" class="form-label">Số điện thoại / Email</label>
                    <input asp-for="Email" class="form-control form-control-modern ps-3" autocomplete="username" placeholder="Nhập thông tin liên hệ" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                    <small class="text-muted small d-block mt-1">Nếu bạn muốn đăng nhập bằng email, vui lòng thêm email trong phần tài khoản sau khi đăng nhập</small>
                    </div>

                    <div class="mb-3">
                    <label asp-for="Password" class="form-label">Mật khẩu</label>
                    <input asp-for="Password" class="form-control form-control-modern ps-3" type="password" autocomplete="current-password" placeholder="••••••••" />
                    <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>

                <div class="mb-4 form-check">
                    <input asp-for="RememberMe" class="form-check-input" type="checkbox" />
                    <label asp-for="RememberMe" class="form-check-label text-muted small">Ghi nhớ đăng nhập</label>
                    </div>

                <button type="submit" class="btn btn-primary-modern w-100 mb-3">Đăng nhập</button>
                </form>

                <div class="text-center">
                <span class="text-muted small">Chưa có tài khoản? </span>
                <a asp-action="Register" class="text-white small fw-bold">Đăng ký</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

