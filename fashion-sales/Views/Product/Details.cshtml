@model Product
@{
    ViewData["Title"] = Model.Name;
}

<nav aria-label="breadcrumb" class="mb-3">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
        <li class="breadcrumb-item">
            <a asp-controller="Category" asp-action="Index" asp-route-id="@Model.CategoryId">@Model.Category.Name</a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
    </ol>
</nav>

<div class="row">
    <div class="col-md-6 mb-4">
        <div class="ratio ratio-4x3 bg-light rounded-4 mb-3">
            @if (!string.IsNullOrEmpty(Model.MainImageUrl))
            {
                <img src="@Model.MainImageUrl" class="img-fluid rounded-4" alt="@Model.Name" />
            }
            else
            {
                <span class="text-muted d-flex align-items-center justify-content-center">Ảnh sản phẩm</span>
            }
        </div>
    </div>
    <div class="col-md-6">
        <h1 class="h3 fw-bold mb-2">@Model.Name</h1>
        <div class="mb-3">
            <span class="h4 text-danger fw-bold">@String.Format("{0:N0}₫", Model.DiscountPrice ?? Model.Price)</span>
            @if (Model.DiscountPrice.HasValue)
            {
                <span class="text-muted text-decoration-line-through ms-2">@String.Format("{0:N0}₫", Model.Price)</span>
            }
        </div>
        <p class="text-muted">Tình trạng: @(Model.StockQuantity > 0 ? "Còn hàng" : "Hết hàng")</p>

        <form asp-controller="Cart" asp-action="Add" method="post" class="mt-3">
            <input type="hidden" name="productId" value="@Model.Id" />
            <div class="mb-3">
                <label class="form-label">Số lượng</label>
                <input type="number" name="quantity" value="1" min="1" class="form-control" style="max-width: 120px;" />
            </div>
            @if (Model.StockQuantity <= 0)
            {
                <button type="submit" class="btn btn-dark btn-lg" disabled>
                    Thêm vào giỏ
                </button>
            }
            else
            {
                <button type="submit" class="btn btn-dark btn-lg">
                    Thêm vào giỏ
                </button>
            }
        </form>

        <hr class="my-4" />
        <h2 class="h6 fw-bold mb-2">Mô tả sản phẩm</h2>
        <p>@(string.IsNullOrWhiteSpace(Model.Description) ? "Đang cập nhật..." : Model.Description)</p>
    </div>
</div>


